{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "type-check": "tsc --pretty --noEmit",
    "build": "next build",
    "start": "next start",
    "new-c": "plop component --plopfile ./plop/plopfile.js",
    "pre-commit": "lint-staged"
  },
  "prettier": "@airnauts/style-guide/prettier",
  "dependencies": {
    "next": "^13.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@airnauts/style-guide": "^1.5.1",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^12.12.21",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "eslint": "^8.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "plop": "^3.1.1",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx}": [
      "bash -c 'pnpm type-check'"
    ],
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --write"
    ],
    "**/*.scss": [
      "stylelint **/*.scss --fix"
    ]
  }
}
