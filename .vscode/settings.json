{
  "editor.rulers": [120],
  "files.defaultLanguage": "typescriptreact",
  "files.autoSave": "off",

  /* Linter configuration */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  /* Disable CSS, SCSS and JavaScript default validation to prevent linting duplicates */
  "css.validate": false,
  "scss.validate": false,
  "javascript.validate.enable": false,

  /* Use double quotes by default (auto setting is broken) */
  "javascript.preferences.quoteStyle": "double",
  "typescript.preferences.quoteStyle": "double",

  "eslint.format.enable": false,

  /* We use our custom NPM task to lint the whole workspace */
  "eslint.lintTask.enable": false,

  "stylelint.enable": true,
  "stylelint.packageManager": "yarn",
  "stylelint.validate": ["css", "scss"],

  /* Typescript */
  "typescript.tsdk": "node_modules/typescript/lib",

  // Exclude some folders from search and/or file tree
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "coverage": true,
    "test-results": true,
    ".next": true,
    ".swc": true
  },
  "search.exclude": {
    "**/.git": true,
    "node_modules": true,
    "coverage": true,
    "test-results": true,
    ".next": true
  },
  "cSpell.words": ["svgr", "tailwindcss", "uuidv"]
}
